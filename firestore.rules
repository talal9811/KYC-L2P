rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Sanctions collection - allow authenticated users to read/write
    match /sanctions/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // History collection - allow authenticated users to read/write
    match /history/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Watchlist collection - allow authenticated users to read/write
    match /watchlist/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Default rule for authenticated users
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}


